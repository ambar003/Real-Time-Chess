<div class="row">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Welcome to Real time Chess! Here is the quote of the day</h3>
        </div>
        <div class="panel-body">
            <blockquote>
                <p>{{ quote.content }}</p>
                <footer>{{ quote.author }}</footer>
            </blockquote>
        </div>
    </div>
</div>

<div class="row">
    <div id="logoutSuccess" hidden="hidden">{{ logoutSuccessMessage }}</div>
    <div id="registerSuccess" hidden="hidden">{{ registerSuccessMessage }}</div>
    <div id="welcomeMessage" hidden="hidden">{{ welcomeMessage }}</div>

</div>